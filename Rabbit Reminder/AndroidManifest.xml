<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.pyxistech.android.rabbitreminder"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/Theme.Fancy">
        <activity android:name=".activities.TaskListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".activities.TaskActivity"
                  android:label="@string/app_name">
        </activity>
        
        <provider android:name=".providers.TaskListProvider" android:authorities="com.pyxistech.rabbitreminder.models.TaskList" />
        
        <uses-library android:name="com.google.android.maps" />
    </application>
    
    <uses-sdk android:minSdkVersion="3" />
	
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 